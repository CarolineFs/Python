n=int(input('Введите число: '))
if n>0:
    r=0
    for i in range (1, n+1):
        r_i=1
        for x in range (1, i+1):
             r_i*=x
        r+=r_i
print(r) 




a=int(input('Введите число: '))
s=0 #сумма факториалов
j=1 #текущий факториал 
for x in range (1, a+1): #начиная с единицы и до введенного числа
    j=j*x #считаем ффакториал текущего числа(умножая это число на факториал предыдущего числа
    s=s+j #прибавляем к сумме
print(s) 

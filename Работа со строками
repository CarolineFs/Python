
len(s)=11 #длина строки
s.count('a') #считает количество букв 'a'
s.rfind('b') #находит заданную буву, справа, возмжно слева - функция s.lfind
s.upper() #Делает все буквы большими, можно задать определеннуб букву 
s.lower() #Делает маленькими все буквы, можно задать определенную букву

s='abrakadabra'
s.capitalize() #Первая буква становится большой
'Abrakadabra'
s.replace('a','o',3) #заменяем а на о, 3 - количество замен

-6-5-4-3-2-1
С Т Р О К А
0 1 2 3 4 5

s[0] #ищет и выводит на экран первый символ строки
s[1:-1] #выводит на экран все символы строки в заданном промежутке - 'bakadabr'
s[1:10] - 'bakadabr'
